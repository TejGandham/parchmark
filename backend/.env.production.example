# Backend Production Environment Configuration
# Copy this file to .env.production on your production server
# WARNING: .env.production should NEVER be committed to version control

# Database Configuration
DATABASE_URL=postgresql://parchmark_user:parchmark_password@postgres:5432/parchmark_db

# JWT Configuration
# IMPORTANT: Generate a new SECRET_KEY using:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_GENERATED_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Update with your actual production domains
ALLOWED_ORIGINS=https://notes.engen.tech,https://assets-api.engen.tech

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
